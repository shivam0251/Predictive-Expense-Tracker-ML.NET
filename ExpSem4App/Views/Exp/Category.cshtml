@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Expense Categories</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .category-card {
            border-radius: 16px;
            text-align: center;
            padding: 20px;
            background-color: white;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
            transition: 0.3s;
            height: 100%;
        }

            .category-card:hover {
                transform: scale(1.03);
                box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
            }

        .category-icon {
            font-size: 2.5rem;
            margin-bottom: 10px;
        }

        .category-title {
            font-weight: 600;
            font-size: 1rem;
        }

        .category-type {
            font-size: 0.85rem;
            color: gray;
        }
    </style>
</head>
<body class="bg-light">

    <div class="container py-5">
        <h3 class="mb-4">💸 Expense & Income Categories</h3>
        <div id="categoryList" class="row g-4"></div>
    </div>

    <script>
        const categoryList = document.getElementById("categoryList");

        fetch("https://localhost:7292/api/ExpApi/GetAllCat")
          .then(response => response.json())
          .then(categories => {
            categories.forEach(cat => {
              const emoji = cat.icon || "❔";

              const col = document.createElement("div");
              col.className = "col-6 col-sm-4 col-md-3 col-lg-2";

              col.innerHTML = `
                <div class="category-card">
                  <div class="category-icon">${emoji}</div>
                  <div class="category-title">${cat.title}</div>
                  <div class="category-type">${cat.type}</div>
                </div>
              `;

              categoryList.appendChild(col);
            });
          })
          .catch(error => {
            console.error("Error loading categories:", error);
            categoryList.innerHTML = `<div class="text-danger">Failed to load categories.</div>`;
          });
    </script>

</body>
</html>
